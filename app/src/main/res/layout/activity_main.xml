<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Function"/>

            <Spinner
                android:id="@+id/function_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/username_linear_layout"
            android:visibility="gone">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Username"/>

            <org.droidparts.widget.ClearableEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/username_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/password_linear_layout"
            android:visibility="gone">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Password"/>

            <org.droidparts.widget.ClearableEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/password_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Token"/>

            <org.droidparts.widget.ClearableEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:id="@+id/token_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/controller_id_linear_layout"
            android:visibility="gone">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Controller id"/>

            <org.droidparts.widget.ClearableEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/controller_id_edit_text"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/camera_button"
                android:text="QR"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/node_id_linear_layout"
            android:visibility="gone">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Node id"/>

            <org.droidparts.widget.ClearableEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:id="@+id/node_id_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/command_id_linear_layout"
            android:visibility="gone">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Command id"/>

            <org.droidparts.widget.ClearableEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:id="@+id/command_id_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/value_linear_layout"
            android:visibility="gone">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Value"/>

            <org.droidparts.widget.ClearableEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:id="@+id/value_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/extra_linear_layout"
            android:visibility="gone">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Extra"/>

            <org.droidparts.widget.ClearableEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="key:value"
                android:id="@+id/extra_edit_text"/>
        </LinearLayout>

        <Button
            android:id="@+id/send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Send request"
            android:layout_marginTop="4dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Response"
            android:layout_marginBottom="10dp"
            android:id="@+id/response_text_view"/>

    </LinearLayout>
</ScrollView>